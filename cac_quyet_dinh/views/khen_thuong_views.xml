<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_khen_thuong_form" model="ir.ui.view">
        <field name="name">khen.thuong.form</field>
        <field name="model">khen.thuong</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Khen thưởng" create="1" edit="1">
                <header>
                    <!-- Statusbar -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved,cancelled,rejected" statusbar_colors="{'cancelled': 'red','rejected': 'red','approved': 'green'}"/>

                    <!-- Buttons hiển thị theo state bằng invisible attr -->
                    <button name="action_confirm" string="Xác nhận" type="object" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Hủy" type="object" invisible="state != 'draft'"/>

                    <button name="action_back_to_draft" string="Quay về nháp" type="object" invisible="state != 'cancelled'"/>

                    <button name="action_approve" string="Phê duyệt" type="object" invisible="state != 'confirmed'"/>
                    <button name="action_reject" string="Từ chối" type="object" invisible="state != 'confirmed'"/>
                </header>

                <sheet>
                    <h1>
                        <field name="title" nolabel="1" placeholder="Tiêu đề khen thưởng" class="oe_inline"/>
                    </h1>
                    <group>
                        <group string="Thông tin nhân viên">
                            <field name="employee_id" required="1"/>
                            <field name="job_title"/>
                            <field name="department_id"/>
                            <field name="manager_id"/>
                        </group>
                        <group string="Người đề xuất">
                            <field name="proposer_id" required="1"/>
                            <field name="proposer_department"/>
                            <field name="proposer_job"/>
                            <field name="propose_date"/>
                        </group>
                    </group>

                    <group string="Nội dung khen thưởng" col="2">
                        <group>
                            <field name="award_type" required="1"/>
                            <field name="organizing_committee"/>
                            <field name="award_content"/>
                        </group>

                        <group>
                            <field name="decision_number"/>
                            <field name="approver_id"/>
                            <field name="approval_date"/>
                        </group>
                        <field name="reject_reason" readonly="1" invisible="state != 'rejected'"/>
                    </group>

                    <notebook>
                        <page string="Phần thưởng">
                            <field name="reward_ids">
                                <tree editable="bottom" options="{'no_ellipses': True}">
                                    <field name="reward_type" width="150"/>
                                    <field name="reward_name" width="250"/>
                                    <field name="reward_value" width="120"/>
                                    <field name="reward_state" width="150"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tài liệu">
                            <field name="attachment" widget="binary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_khen_thuong_tree" model="ir.ui.view">
        <field name="name">khen.thuong.tree</field>
        <field name="model">khen.thuong</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title" string="Tên"/>
                <field name="employee_id"/>
                <field name="job_title"/>
                <field name="department_id"/>
                <field name="award_type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_khen_thuong" model="ir.actions.act_window">
        <field name="name">Khen thưởng</field>
        <field name="res_model">khen.thuong</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Tạo khen thưởng mới</p>
        </field>
    </record>
</odoo>