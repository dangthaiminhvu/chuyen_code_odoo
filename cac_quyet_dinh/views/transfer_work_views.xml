<odoo>
    <record id="view_transfer_work_form" model="ir.ui.view">
        <field name="name">lh.transfer.work.form</field>
        <field name="model">lh.transfer.work</field>
        <field name="arch" type="xml">
            <form string="Điều chuyển công tác">
                <header>
                    <button name="action_cancel" type="object" string="Hủy" class="btn btn-secondary"/>
                    <button name="action_done" type="object" string="Hoàn thành" class="btn btn-primary"/>
                    <field name="transfer_status" widget="statusbar" statusbar_visible="draft,done,cancel"/>
                </header>

                <sheet>
                    <group colspan="2">
                        <group string="THÔNG TIN NHÂN VIÊN">
                            <field name="employee_id"/>
                            <field name="job_title_old" readonly="1"/>
                        </group>
                        <group string="THÔNG TIN NGƯỜI PHÊ DUYỆT">
                            <field name="director_id" readonly="1"/>
                            <field name="tp_hcns_id" readonly="1"/>
                        </group>
                    </group>

                    <group colspan="2">
                        <group string="PHÒNG BAN CŨ">
                            <group>
                                <field name="department_old_id" readonly="1"/>
                                <field name="manager_old_id"/>
                                <field name="manager_old_job" readonly="1"/>
                            </group>
                        </group>

                        <group>
                            <group string="PHÒNG BAN MỚI">
                                <field name="new_department_id"/>
                                <field name="new_manager_id"/>
                                <field name="new_manager_job" readonly="1"/>
                            </group>
                        </group>
                    </group>

                    <group string="THÔNG TIN ĐIỀU CHUYỂN">
                        <field name="date_start"/>
                        <field name="new_job_title"/>
                        <field name="reason"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_transfer_work_tree" model="ir.ui.view">
        <field name="name">lh.transfer.work.tree</field>
        <field name="model">lh.transfer.work</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="department_old_id"/>
                <field name="new_department_id"/>
                <field name="date_start"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_transfer_work" model="ir.actions.act_window">
        <field name="name">Điều chuyển công tác</field>
        <field name="res_model">lh.transfer.work</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
