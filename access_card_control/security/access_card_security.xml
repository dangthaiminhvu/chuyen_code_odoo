<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="0">

    <record id="module_category_access_card" model="ir.module.category">
        <field name="name">Quản lý thẻ</field>
        <field name="description">Nhóm phân quyền cho module quản lý thẻ ra vào</field>
        <field name="sequence">20</field>
    </record>
    

    <!-- Nhóm quản lý thẻ: có toàn quyền -->
    <record id="group_access_card_manager" model="res.groups">
      <field name="name">Quản lý thẻ ra vào</field>
      <field name="category_id" ref="module_category_access_card"/>
    </record>

    <!-- Nhóm xem thẻ: chỉ được xem -->
    <record id="group_access_card_viewer" model="res.groups">
      <field name="name">Chỉ xem thẻ ra vào</field>
      <field name="category_id" ref="module_category_access_card"/>
    </record>

  </data>
</odoo>
