<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- form view the CBCNV -->
    <record id="view_access_card_form" model="ir.ui.view">
        <field name="name">access.card.form</field>
        <field name="model">access.card</field>
        <field name="arch" type="xml">
            <form string="The ra vao">
                <group>
                    <field name="name"/>
                    <field name="employee_name"/>
                    <field name="department"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <!-- tree view the CBCNV -->
    <record id="view_access_card_tree" model="ir.ui.view">
        <field name="name">access.card.tree</field>
        <field name="model">access.card</field>
        <field name="arch" type="xml">
            <tree string="Danh sach the">
                <field name="name"/>
                <field name="employee_name"/>
                <field name="department"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- tree view lich su quet the -->
    <record id="view_card_swipe_tree" model="ir.ui.view">
        <field name="name">card.swipe.tree</field>
        <field name="model">access.card.swipe</field>
        <field name="arch" type="xml">
            <tree string="Lich su quet the">
                <field name="card_id"/>
                <field name="swipe_time"/>
                <field name="location"/>
                <field name="direction"/>
                <field name="is_allowed"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <!-- action windows -->
    <record id="access_card_action" model="ir.actions.act_window">
        <field name="name">Thẻ CBCNV</field>
        <field name="res_model">access.card</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="card_swipe_action" model="ir.actions.act_window">
        <field name="name">Lịch sử quẹt thẻ</field>
        <field name="res_model">access.card.swipe</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- menu -->
    <menuitem id="menu_access_card_root" name="Quản lý ra vào lò" web_icon="access_card_control,static/description/icon.png" groups="base.group_user,access_card_control.group_access_card_manager,access_card_control.group_access_card_viewer"
    /> <!-- groups dung de phan quyen, base.group_user là nhóm mặc định cho superuser, với nhóm này, superuser sẽ luôn có quyền truy cập. -->

    <menuitem id="menu_access_card" name="The CBCNV" parent="menu_access_card_root" action="access_card_control.access_card_action" 
    />

    <menuitem id="menu_card_swipe" name="Quet the" parent="menu_access_card_root" action="access_card_control.card_swipe_action"
    />
</odoo>
