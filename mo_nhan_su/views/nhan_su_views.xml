<odoo>
    <data>
        <record id="view_mo_nhan_su_form" model="ir.ui.view">
            <field name="name">Form Mỏ Nhân Sự</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="work_email" position="after">
                    <field name="ma_the"/>
                    <field name="ca_lam_viec_id"/>
                </field>
            </field>
        </record>

        <record id="action_mo_nhan_su" model="ir.actions.act_window">
            <field name="name">Nhân sự mỏ</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_mo_nhan_su_root" name="Quản Lý Nhân Sự" sequence="5" web_icon="mo_nhan_su,static/description/icon.png"/>
        <menuitem id="menu_mo_nhan_su" name="Nhân sự" parent="menu_mo_nhan_su_root" action="action_mo_nhan_su"/>
    </data>
</odoo>