<odoo>
    <!-- Form view -->
    <record id="base_model_view_form" model="ir.ui.view">
        <field name="name">dog.form</field>
        <field name="model">dog</field>
        <field name="arch" type="xml">
            <form string="Dog">
                <header>
                    <button name="action_create_dog" string="Create Dog" id="action_create_dog_btn" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="color"/>
                            <field name="age"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree (List) view -->
    <record id="dog_view_tree" model="ir.ui.view">
        <field name="name">dog.tree</field>
        <field name="model">dog</field>
        <field name="arch" type="xml">
            <tree string="Danh sÃ¡ch Dog">
                <field name="name"/>
                <field name="gender"/>
                <field name="color"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <!-- Action window: show tree + form -->
    <record id="dog_action" model="ir.actions.act_window">
        <field name="name">Dog</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dog</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_animal" name="Animal"/>
    <menuitem id="menu_dog" name="Dog" parent="menu_animal" action="dog_action"/>
</odoo>
