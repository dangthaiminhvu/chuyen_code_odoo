<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_holiday_calendar_line_tree" model="ir.ui.view">
        <field name="name">holiday.calendar.line.tree</field>
        <field name="model">holiday.calendar.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" string="Tên"/>
                <field name="date_start" string="Ngày bắt đầu"/>
                <field name="date_end" string="Ngày kết thúc"/>
                <field name="working_hours_type" string="Giờ làm việc"/>
                <field name="work_type" string="Loại công việc"/>
            </tree>
        </field>
    </record>

    <record id="action_holiday_calendar_line" model="ir.actions.act_window">
        <field name="name">Ngày lễ</field>
        <field name="res_model">holiday.calendar.line</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Chưa có ngày lễ nào, hãy tạo mới!</p>
        </field>
    </record>

</odoo>
