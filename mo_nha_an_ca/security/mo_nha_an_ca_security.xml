<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="0">

    <!-- Tạo nhóm phân quyền -->
    <record id="module_category_mo_nha_an_ca" model="ir.module.category">
        <field name="name">Quản lý nhà ăn</field>
        <field name="description">Nhóm phân quyền cho module quản lý nhà ăn</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_access_card_manager" model="res.groups">
      <field name="name">Quản lý thẻ ra vào</field>
      <field name="category_id" ref="module_category_mo_nha_an_ca"/>
    </record>

    <!-- Gán quyền cho nhóm -->
    <record id="group_access_card_user" model="res.groups">
      <field name="name">Người dùng thẻ ra vào</field>
      <field name="category_id" ref="module_category_mo_nha_an_ca"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

  </data>
</odoo>
