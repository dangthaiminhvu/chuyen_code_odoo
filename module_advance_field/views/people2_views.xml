<odoo>
	<record id="people_view_form" model="ir.ui.view">
		<field name="name">people2.form</field>
		<field name="model">people2</field>
		<field name="arch" type="xml">
			<form string="People2">
				<sheet>
					<group>
						<group>
							<field name="name" />
							<field name="cv1" />
							<field name="cv2" />
							<field name="avatar" widget='image'/>
						</group>
						<group>
							<field name="gender" />
							<field name="information" />
						</group>
					</group>
					<notebook>
						<page string="Description">
							<field name="description" />
						</page>
						<page string="Description 2">
							<field name="description2" />
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="people_view_tree" model="ir.ui.view">
        <field name="name">people2.tree</field>
        <field name="model">people2</field>
        <field name="arch" type="xml">
            <tree string="Danh sÃ¡ch People2">
				<field name="name" />
				<field name="cv1" />
				<field name="cv2" />
				<field name="avatar" widget='image'/>
				<field name="gender" />
				<field name="information" />
				<field name="description" />
				<field name="description2" />
            </tree>
        </field>
    </record>

	<record id="people_action" model="ir.actions.act_window">
		<field name="name">people2</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">people2</field>
	</record>

	<menuitem id="menu_field" name="People 2" web_icon="module_advance_field,"/>
	<menuitem id="menu_people" name="Advance Field" parent="menu_field" action='people_action' />
</odoo>