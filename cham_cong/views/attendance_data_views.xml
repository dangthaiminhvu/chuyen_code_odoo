<odoo>
    <record id="action_log_attendance" model="ir.actions.act_window">
        <field name="name">Dữ liệu chấm công</field>
        <field name="res_model">log.attendance</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_log_attendance_tree" model="ir.ui.view">
        <field name="model">log.attendance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="mcc_uid"/>
                <field name="machine_serial"/>
                <field name="check_time"/>
                <field name="date"/>
            </tree>
        </field>
    </record>
    <record id="view_log_attendance_form" model="ir.ui.view">
        <field name="model">log.attendance</field>
        <field name="arch" type="xml">
            <form string="Dữ liệu chấm công">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="mcc_uid" readonly="1"/>
                        <field name="machine_serial" readonly="1"/>
                    </group>
                    <group>
                        <field name="check_time"/>
                        <field name="date"/>
                        <field name="image" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>